#Calculator using Python
# Make sure the Indentations are correct while coping 

def addition():
  print("Addition")
  n = float(input("Enter the number: ")
  ans = 0
  t = 0
  while n != 0:
    ans =  ans + n
    t += 1
    n = float(input(" Enter Another Number or 0 to calculate: ")
  return [ans,t]

def substraction():
  print("Substraction")
  n = float(input("Enter the Number: ")
  ans = 0
  t = 0
  while n != 0:
    ans = ans - n
    t += 1
    n = float(input("Enter Another Number of 0 to calculate: ")
  return [ans,t]
  
def mutiplication():
  print("mutiplication")
  n = float(input("Enter the Number")
  ans = 0
  t = 0
  while n != 0:
    ans = ans * n
    t += 1
    n = float(input("Enter Another Number or 0 to calculate: ")
  return [ans,t]
    
 def avarage():
  print("avarage)
  an = []
  an = addition()
  Numbers_Count = an[1]
  Sum_Numbers = an[0]
  ans = Sum_Numbers/Numbers_Count
  return [ans,Numbers_Count]
    
#Main...
while True:
  list =[]
  print("Python Calculator")
  print("Python by Arjun Rajapeta")
  print("Enter 'a' for addition")
  print("Enter 's' for substraction")
  print("Enter 'm' for mutiplication")
  print("Enter 'v' for avarage")
  print("Enter 'q' for quit")
  what = input("")
  if what != 'q':
    if what == a:
      list = addition()
      print("Ans =", list[0], "total inputs ",list[1]) 
    elif what == s:
      list = substraction()
      print("Ans =", list[0], "total inputs ",list[1])
    elif what == m:
      list = mutiplication()
      print("Ans =", list[0], "total inputs ",list[1])
    elif what == v:
      list = avarage()
      print("Ans =", list[0], "total inputs ",list[1])
    else:
      print("SORRY, INVALID CHARACTER")
  else:
    break   
    
      
      
  
